<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amber_50"
    android:padding="30dp"
    android:orientation="vertical"

    tools:context=".HomeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:elevation="12dp"
        android:id="@+id/imgcontainer"
        app:cardCornerRadius="280dp"
        app:cardBackgroundColor="@color/colorLogo">
        <ImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:padding="3dp"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnLihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_baseline_archive_24"
        android:text="LIHAT DATA"
        android:textSize="24sp"
        android:background="#E91E1E"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_baseline_add_box_24"
        android:text="INPUT DATA"
        android:textSize="24sp"
        android:background="@color/blue_700"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:text="INFORMASI"
        android:textSize="24sp"
        android:background="@color/amber_300"
        android:textColor="@color/white"/>

</LinearLayout>